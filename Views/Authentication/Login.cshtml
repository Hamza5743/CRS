@{
    Layout = null;
}

@model string;

<html>
<head>
    <link rel = "stylesheet" href = "~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel = "stylesheet" href = "~/css/site.css">
    <link rel = "stylesheet" href = "https://use.fontawesome.com/releases/v5.0.8/css/all.css">
    <link rel = "icon" href = "~/favicon/favicon.ico" type = "image/x-icon"> 
    <script src="~/js/Login.js"></script>
</head>

<body>
    <div class = "container d-flex h-100">
        <div class = "card bg-light row justify-content-center align-self-center" style="margin-left:auto; margin-right:auto; width:40%">
            <div style="text-align: center;">
                <img src="~/favicon/android-icon-144x144.png" class="mr-3 rounded-circle" alt="Not Found" style="margin-top:5%;">
            </div>
            
            <article class = "card-body mx-auto"  style="width:80%">
                <h4 class = "card-title mt-3 text-center">Sign In</h4>

                <form onsubmit="return checkFields();" method="post" action="../Authentication/LoginProc">
                    <div class = "form-group input-group">
                        <div  class = "input-group-prepend">
                            <span class = "input-group-text"> <i class = "fa fa-envelope"></i> </span>
                        </div>
                        <input name = "Email" id = "Email" class = "form-control" placeholder = "Email address" type = "email" style="min-width:80%">
                        <h6 id="EError"></h6>
                    </div>
                    
                    <div class = "form-group input-group">
                        <div  class = "input-group-prepend">
                            <span class = "input-group-text"> <i class = "fa fa-lock"></i> </span>
                        </div>
                        <input name="Password" id="Password" class = "form-control" placeholder = "********" type = "password" style="min-width:80%">
                        <h6 id="PError"></h6>
                    </div>                              
                    <div class = "form-group">
                        <button type  = "submit" class = "btn btn-primary btn-block"> Sign In  </button>
                    </div>
                    <h6 style="color: #ff0000;">@Model</h6>
                    <p class = "text-center">Not Registered Yet? <a href = "../Authentication/SignUp">Sign Up</a> </p>
                </form>
            </article>
        </div> 
    </div> 

    <footer class="footer">
        <p>  &copy; CRS 2017-2020</p>
    </footer>
</body>
</html>